{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "build/",
        "allowSyntheticDefaultImports": true,
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "build",
        ".vscode"
    ]
}